<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_base_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_base_headline"
        android:padding="8dp"
        android:text="@string/place_holder"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_base_libCount"
        app:layout_constraintTop_toBottomOf="@id/text_base_headline"
        android:padding="8dp"
        android:text="Liberal Policies Passed: "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_base_fasCount"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_base_libCount"
        android:text="Fascist Policies Passed: "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_base_fasCount"
        android:id="@+id/text_base_election_tracker"
        android:text="Citizen Frustration:  "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/text_base_election_tracker"
        android:id="@+id/text_base_president_headline"
        android:text="@string/place_holder"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_base_selection"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_base_president_headline">

    </Spinner>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/constraint_base_parent"
        android:text="Confirm selection"
        android:id="@+id/button_base_confirmation"/>
</android.support.constraint.ConstraintLayout>

